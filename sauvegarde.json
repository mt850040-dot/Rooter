const fs = require("fs");
const PREFIX = "192.168.100";
const FILE_PATH = "./ipList.json";

// Charger la liste depuis le fichier au dÃ©marrage
let ipList = [];
if (fs.existsSync(FILE_PATH)) {
  try {
    ipList = JSON.parse(fs.readFileSync(FILE_PATH, "utf8"));
  } catch (e) {
    console.error("Erreur lecture ipList.json :", e);
    ipList = [];
  }
}

// Fonction pour sauvegarder automatiquement
function saveIPList() {
  fs.writeFileSync(FILE_PATH, JSON.stringify(ipList, null, 2));
}

function isValidSuffix(suffix) {
  const n = Number(suffix);
  return Number.isInteger(n) && n >= 1 && n <= 254;
}

function addIP(suffix) {
  if (!isValidSuffix(suffix)) {
    return "âŒ Suffixe invalide (1 Ã  254)";
  }

  const ip = `${PREFIX}.${suffix}`;

  if (ipList.includes(ip)) {
    return `âš ï¸ L'IP ${ip} existe dÃ©jÃ `;
  }

  ipList.push(ip);
  saveIPList(); // sauvegarde aprÃ¨s ajout
  return `âœ… IP ajoutÃ©e : ${ip}`;
}

function removeIP(suffix) {
  if (!isValidSuffix(suffix)) {
    return "âŒ Suffixe invalide (1 Ã  254)";
  }

  const ip = `${PREFIX}.${suffix}`;

  const index = ipList.indexOf(ip);
  if (index === -1) {
    return `âš ï¸ L'IP ${ip} n'existe pas`;
  }

  ipList.splice(index, 1);
  saveIPList(); // sauvegarde aprÃ¨s suppression
  return `ðŸ—‘ï¸ IP supprimÃ©e : ${ip}`;
}

function showIPs() {
  if (ipList.length === 0) {
    return "ðŸ“­ Aucune IP enregistrÃ©e";
  }

  return "ðŸ“‹ IP enregistrÃ©es :\n" + ipList.join("\n");
}

async function handleIPCommand(message, sender, OWNER) {
  if (sender !== OWNER) {
    return "â›” Commande rÃ©servÃ©e Ã  lâ€™administrateur";
  }

  const parts = message.trim().split(" ");

  if (parts.length < 2 || parts[0] !== "!ip") {
    return null;
  }

  const action = parts[1];
  const suffix = parts[2];

  switch (action) {
    case "add":
      return addIP(suffix);

    case "remove":
      return removeIP(suffix);

    case "show":
      return showIPs();

    default:
      return "â“ Commande inconnue\nExemple : !ip add 25";
  }
}

module.exports = { handleIPCommand };
